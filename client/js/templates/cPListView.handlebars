{{#if title}}
  <h3>{{title}}</h3>
<div class="listView">
  {{#each this.movies}}
    {{#if original_title}}
      {{#if imdb}}
        <a class="listInfo" id="{{imdb}}">
          <div class="title">{{original_title}}</div>
          <div class="subText">{{year}}</div>
          <div class="listExtra"></div>
        </a>
        <div class="listAdd" style="display:none;" id="buttons_{{imdb}}">
          <span class="btn btn-danger listCancelButton" id="cancel_{{imdb}}">Cancel</span>
          <span class="btn btn-success listAddButton" id="add_{{imdb}}">Add Movie</span>
        </div>
      {{/if}}
    {{/if}}
  {{/each}}
</div>
{{/if}}
